<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.wise.meta.admin.service.HelpCommentMapper">
<resultMap id="BaseResultMap" type="kr.wise.meta.admin.service.HelpComment" >
	<result column="TYP_NM" property="typNm" jdbcType="VARCHAR" />
	<result column="TYP_CD" property="typCd" jdbcType="VARCHAR" />
	<result column="ITEM_NO" property="itemNo" jdbcType="VARCHAR" />
	<result column="ITEM_NM" property="itemNm" jdbcType="VARCHAR" />
	<result column="COLCT_MTHD" property="colctMthd" jdbcType="VARCHAR" />
	<result column="REG_MTH" property="regMth" jdbcType="VARCHAR" />
</resultMap>
  
	<select id="selectHelpList"  parameterType="kr.wise.meta.admin.service.WaaInfoSys" resultMap="BaseResultMap">
		SELECT 
				SNO,
				TYP_CD,
				TYP_NM,
				ITEM_NO,
				ITEM_NM,
				COLCT_MTHD,
				REG_MTH
		FROM WAA_HPCM
		WHERE TYP_CD = #{typCd, jdbcType=VARCHAR}
	</select>
</mapper>